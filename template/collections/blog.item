{.section item}
  
  <article id="post-{id}" class="{@|item-classes} blog-item-article" data-item-id="{id}"> 

    <h2 class="text-center" data-content-field="title">
      {title}
    </h2>
      
    <div class="date">
      <time datetime="{addedOn|date %F}">{addedOn|date %B %d, %Y}</time>
    </div> 


    <div class="blog-item-content">
      {body}
    </div>

    <div class="share-and-like clearfix">
      <div class="back-to-blog left">
        <a href="/blog">Back to Blog</a>
      </div>
      <div class="like-link">
        {@|like-button}
      </div>
      <div class="share-link">
        {@|social-button}
      </div>
    </div>

  </article>

{.end}
